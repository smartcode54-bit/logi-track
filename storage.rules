rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Truck images
    match /trucks/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Subcontractor documents
    match /subcontractors/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Driver documents & profiles
    match /drivers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Default: deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
