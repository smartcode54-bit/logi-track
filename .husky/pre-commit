#!/bin/sh

# Check if .vibe-rules.md was modified in this commit
if ! git diff --cached --name-only | grep -q ".vibe-rules.md"; then
  echo ""
  echo "❌ BLOCKED: .vibe-rules.md was NOT updated!"
  echo "   You MUST update the Change Log before committing."
  echo ""
  echo "   To skip this check (emergency only): git commit --no-verify"
  echo ""
  exit 1
fi

echo "✅ .vibe-rules.md is updated. Proceeding with commit..."
